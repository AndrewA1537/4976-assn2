@page "/Donations/Delete/{DonationId:int}"
@using NonProfitLibrary
@using Services
@inject DonationsService donationsService
@inject NavigationManager NavigationManager

<h1>Delete Donation</h1>

@if (donation == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h3>Are you sure you want to delete this donation?</h3>
    <div>
        <h4>Donation Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @donation.Date.ToString("d")
            </dd>
            <dt class="col-sm-2">
                Amount
            </dt>
            <dd class="col-sm-10">
                @donation.Amount
            </dd>
            <dt class="col-sm-2">
                Notes
            </dt>
            <dd class="col-sm-10">
                @donation.Notes
            </dd>
            <dt class="col-sm-2">
                Created
            </dt>
            <dd class="col-sm-10">
                @donation.Created.ToString("g")
            </dd>
            <dt class="col-sm-2">
                Modified
            </dt>
            <dd class="col-sm-10">
                @donation.Modified.ToString("g")
            </dd>
            <dt class="col-sm-2">
                Created By
            </dt>
            <dd class="col-sm-10">
                @donation.CreatedBy
            </dd>
            <dt class="col-sm-2">
                Modified By
            </dt>
            <dd class="col-sm-10">
                @donation.ModifiedBy
            </dd>
            <dt class="col-sm-2">
                Account Email
            </dt>
            <dd class="col-sm-10">
                @donation.Account?.Email
            </dd>
            <dt class="col-sm-2">
                Transaction Type
            </dt>
            <dd class="col-sm-10">
                @donation.TransactionType?.Name
            </dd>
            <dt class="col-sm-2">
                Payment Method
            </dt>
            <dd class="col-sm-10">
                @donation.PaymentMethod?.Name
            </dd>
        </dl>

        <button @onclick="DeleteDonation" class="btn btn-danger">Delete</button>
        <a href="/Donations/Index" class="btn btn-secondary">Back to List</a>
    </div>
}

@code {
    private Donations? donation;

    [Parameter] public int DonationId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        donation = await donationsService.GetDonationByIdAsync(DonationId);
    }

    private async Task DeleteDonation()
    {
        if (donation != null)
        {
            await donationsService.DeleteDonationAsync(donation.TransId);
            // Redirect to the donations list page after deletion.
            NavigationManager.NavigateTo("/Donations/Index");
        }
    }
}
